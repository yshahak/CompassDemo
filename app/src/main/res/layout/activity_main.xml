<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_sonar_bg"
    android:clipChildren="false"
    tools:context="com.example.yshahak.compassdemo.MainActivity">

    <ImageView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:scaleType="fitXY"
        android:src="@drawable/grid"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/grid1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:scaleType="fitXY"
        android:src="@drawable/grid"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/grid2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:scaleType="fitXY"
        android:src="@drawable/grid"
        tools:alpha="1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/hot_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_hot_fire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0"
                android:src="@drawable/ic_sonar_fire"
                tools:alpha="1" />

            <TextView
                android:id="@+id/text_view_sonar_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:alpha="0"
                android:gravity="center"
                android:text="Hot Sonar"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:alpha="1" />
        </LinearLayout>

        <View
            android:id="@+id/meter_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/half_panel"
            android:alpha="0"
            android:background="@drawable/img_sonar_circle_meter_grid"
            tools:alpha="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:src="@drawable/img_sonar_half_circle_no_teeth"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/half_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:alpha="0"
            android:src="@drawable/img_sonar_half_circle_teeth"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/half_panel_rotate_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:alpha="0"
            android:src="@drawable/img_sonar_half_circle_teeth"
            tools:alpha="1" />

        <TextView
            android:id="@+id/text_azimuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_arrow"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:textColor="@color/blue"
            android:textSize="20sp"
            tools:alpha="1"
            tools:text="a: 0" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:src="@drawable/img_sonar_arro"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/img_needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:src="@drawable/img_sonar_hand"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/img_square1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="170dp"
            android:alpha="0"
            android:src="@drawable/small_square"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/img_square2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="175dp"
            android:alpha="0"
            android:src="@drawable/small_square"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/img_square3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="350dp"
            android:alpha="0"
            android:src="@drawable/small_square"
            tools:alpha="1" />

        <ImageView
            android:id="@+id/img_square4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="320dp"
            android:alpha="0"
            android:src="@drawable/small_square"
            tools:alpha="1" />
    </RelativeLayout>

</FrameLayout>

